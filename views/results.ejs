<% // Render your search results here %>
<% // This is how to do comments in EJS, by the way... %>

<h1>Search Results for <%= userSearch %>:</h1>
<div>
    <% responseData.Search.forEach(movie => { %>
      <div>
        <h2><%= movie.Title %></h2>
        <p>year: <%= movie.Year %></p>
        <% if (movie.Poster !== "N/A") { %>
        <img src="<%= movie.Poster %>" alt="<%= movie.Title %>'s release poster" />
          
        <% } else {%>
          <p>No Movie Poster Found 🙁</p>
        <% } %>
          <div>
          <a href="/movies/<%= movie.imdbID %>">details</a>
          </div>
      </div>
    <% }) %>
</div>
